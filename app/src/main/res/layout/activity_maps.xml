<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mapaaa"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity" >


    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#000000"
        >
    </View>

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/resta"
        android:background="@drawable/resta"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/textorest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restaurantes"
        android:layout_below="@+id/button2"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginStart="5dp"/>


    <ImageButton
        android:layout_toEndOf="@id/button2"
        android:id="@+id/button3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/cafes"
        android:background="@drawable/cafes"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"/>

    <TextView
        android:id="@+id/textocafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/caf_s"
        android:layout_below="@+id/button3"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_toEndOf="@id/textorest"
        android:layout_marginStart="28dp"/>



    <ImageButton
        android:layout_toEndOf="@id/button3"
        android:id="@+id/button4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/hotel"
        android:background="@drawable/hotel"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"/>

    <TextView
        android:id="@+id/textohoteis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hoteis"
        android:layout_below="@+id/button4"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_toEndOf="@id/textocafe"
        android:layout_marginStart="53dp"/>



    <ImageButton
        android:layout_toEndOf="@id/button4"
        android:id="@+id/button5"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/pastelaria"
        android:background="@drawable/pastelaria"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pastelaria"
        android:layout_below="@+id/button5"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_toEndOf="@id/textohoteis"
        android:layout_marginStart="30dp"/>


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="100dp"
        tools:context=".MapsActivity" />



</RelativeLayout>


